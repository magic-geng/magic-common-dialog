<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">
    <LinearLayout
        android:background="@drawable/white_color_corner_5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--   头部     -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:id="@+id/v_text_view"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginBottom="30dp"
                android:lines="1"
                tools:text="1.2.1"
                android:textColor="#000000"
                android:textSize="19sp"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/v_content_view"
            android:layout_marginTop="27dp"
            android:layout_marginRight="27dp"
            android:layout_marginLeft="27dp"
            android:lineSpacingExtra="4dp"
            android:gravity="left|center"
            android:textSize="14sp"
            android:includeFontPadding="false"
            tools:text="1.修改了部分版本兼容的问题。\n2.修改了部分bug。\n3.更新了版本用户体验问题。"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/v_update_view"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:textSize="18sp"
            android:text="确定"
            android:gravity="center"
            android:background="#DCC9B8"
            android:layout_width="match_parent"
            android:layout_height="42dp"/>

        <TextView
            android:id="@+id/v_cancel_view"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:textSize="18sp"
            android:text="取消"
            android:gravity="center"
            android:background="#F1F1F1"
            android:layout_width="match_parent"
            android:layout_height="42dp"/>

    </LinearLayout>


</FrameLayout>